<%= form_for @question do |f| %>
  <% if @question.errors.any? %>
    <div id = 'error_explanation'>
      <h2>
        <%= pluralize(@question.errors.count,'error') %> Prohibited this Question from saving:
      </h2>
      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>